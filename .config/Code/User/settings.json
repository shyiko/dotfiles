{
    "[markdown]": {
        "editor.quickSuggestions": false,
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 120,
        "files.trimTrailingWhitespace": false
    },
    "breadcrumbs.enabled": true,
    "debug.console.fontSize": 13,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.fontFamily": "'DejaVu Sans Mono', 'monospace', 'FontAwesome', 'Droid Sans Fallback'",
    "editor.fontSize": 12,
    "editor.formatOnType": true,
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "alt",
    "editor.rulers": [
        {
            "column": 80
        },
        {
            "column": 120
        }
    ],
    "editor.scrollBeyondLastLine": false,
    // https://github.com/Microsoft/vscode/issues/32579#issuecomment-341502559
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "comment",
                    "comment.block",
                    "comment.block.documentation",
                    "comment.line",
                    "constant",
                    "constant.character",
                    "constant.character.escape",
                    "constant.numeric",
                    "constant.numeric.integer",
                    "constant.numeric.float",
                    "constant.numeric.hex",
                    "constant.numeric.octal",
                    "constant.other",
                    "constant.regexp",
                    "constant.rgb-value",
                    "emphasis",
                    "entity",
                    "entity.name",
                    "entity.name.class",
                    "entity.name.function",
                    "entity.name.method",
                    "entity.name.section",
                    "entity.name.selector",
                    "entity.name.tag",
                    "entity.name.type",
                    "entity.other",
                    "entity.other.attribute-name",
                    "entity.other.inherited-class",
                    "invalid",
                    "invalid.deprecated",
                    "invalid.illegal",
                    "keyword",
                    "keyword.control",
                    "keyword.operator",
                    "keyword.operator.new",
                    "keyword.operator.assignment",
                    "keyword.operator.arithmetic",
                    "keyword.operator.logical",
                    "keyword.other",
                    "markup",
                    "markup.bold",
                    "markup.changed",
                    "markup.deleted",
                    "markup.heading",
                    "markup.inline.raw",
                    "markup.inserted",
                    "markup.italic",
                    "markup.list",
                    "markup.list.numbered",
                    "markup.list.unnumbered",
                    "markup.other",
                    "markup.quote",
                    "markup.raw",
                    "markup.underline",
                    "markup.underline.link",
                    "meta",
                    "meta.block",
                    "meta.cast",
                    "meta.class",
                    "meta.function",
                    "meta.function-call",
                    "meta.preprocessor",
                    "meta.return-type",
                    "meta.selector",
                    "meta.tag",
                    "meta.type.annotation",
                    "meta.type",
                    "punctuation.definition.string.begin",
                    "punctuation.definition.string.end",
                    "punctuation.separator",
                    "punctuation.separator.continuation",
                    "punctuation.terminator",
                    "storage",
                    "storage.modifier",
                    "storage.type",
                    "string",
                    "string.interpolated",
                    "string.other",
                    "string.quoted",
                    "string.quoted.double",
                    "string.quoted.other",
                    "string.quoted.single",
                    "string.quoted.triple",
                    "string.regexp",
                    "string.unquoted",
                    "strong",
                    "support",
                    "support.class",
                    "support.constant",
                    "support.function",
                    "support.other",
                    "support.type",
                    "support.type.property-name",
                    "support.variable",
                    "variable",
                    "variable.language",
                    "variable.name",
                    "variable.other",
                    "variable.other.readwrite",
                    "variable.parameter"
                ],
                "settings": {
                    "fontStyle": ""
                }
            }
        ]
    },
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 160,
    "explorer.confirmDelete": false,
    "explorer.openEditors.visible": 0,
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    "files.associations": {
        "*.env.template": "dotenv"
    },
    "files.autoSave": "onFocusChange",
    "files.trimTrailingWhitespace": true,
    "git.enableSmartCommit": true,
    "gitlens.blame.avatars": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.hovers.enabled": false,
    "gitlens.mode.statusBar.enabled": false,
    "gitlens.statusBar.enabled": false,
    "gitlens.views.compare.avatars": false,
    "gitlens.views.compare.files.layout": "tree",
    "gitlens.views.compare.location": "scm",
    "gitlens.views.fileHistory.avatars": false,
    "gitlens.views.fileHistory.location": "scm",
    "gitlens.views.lineHistory.avatars": false,
    "gitlens.views.lineHistory.location": "scm",
    "gitlens.views.repositories.avatars": false,
    "gitlens.views.repositories.files.layout": "tree",
    "gitlens.views.repositories.location": "scm",
    "gitlens.views.repositories.showBranchComparison": false,
    "gitlens.views.search.avatars": false,
    "gitlens.views.search.files.layout": "tree",
    "gitlens.views.search.location": "scm",
    "go.gopath": "~/.go",
    "go.goroot": "~/.go/default",
    "go.inferGopath": true,
    // https://github.com/Microsoft/vscode/issues/32037#issuecomment-322042146
    "keyboard.dispatch": "keyCode",
    "markdown.preview.fontSize": 13,
    "scm.defaultViewMode": "tree",
    "search.showLineNumbers": true,
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext"
    ],
    "spellright.language": [
        "en_US"
    ],
    "spellright.notificationClass": "hint",
    "terminal.integrated.fontSize": 13,
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO"
    ],
    "todo-tree.highlights.defaultHighlight": {
        "background": "red",
        "foreground": "white",
        "icon": "check",
        "type": "text"
    },
    "todo-tree.tree.showScanModeButton": false,
    "update.mode": "manual",
    "window.menuBarVisibility": "toggle",
    "window.restoreWindows": "none",
    "window.title": "${folderName}${separator}${activeEditorMedium}",
    "window.zoomLevel": 0.75,
    "workbench.activityBar.visible": true,
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#5c63705e"
    },
    "workbench.colorTheme": "Atom One Dark",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 12,
    "workbench.editor.tabSizing": "shrink",
    // "workbench.iconTheme": "chalice-icon-theme",
    "workbench.sideBar.location": "left",
    "workbench.statusBar.visible": true,
    "yaml.format.enable": true,
    "workbench.iconTheme": "chalice-icon-theme",
}
